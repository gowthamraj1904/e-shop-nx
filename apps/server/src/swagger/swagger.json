{
    "openapi": "3.0.3",
    "info": {
        "version": "1.0.0",
        "title": "eShop API Documentation",
        "description": "eShop Restful webservice application",
        "license": {
            "name": "GOWTHAMRAJ"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1/"
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "email",
                    "phone",
                    "address",
                    "dateCreated"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "uniqueItems": true
                    },
                    "name": {
                        "type": "object",
                        "properties": {
                            "firstName": {
                                "type": "string"
                            },
                            "lastName": {
                                "type": "string"
                            }
                        }
                    },
                    "email": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "object",
                        "properties": {
                            "countryCode": {
                                "type": "string"
                            },
                            "phone": {
                                "type": "string"
                            }
                        }
                    },
                    "address": {
                        "type": "object",
                        "properties": {
                            "doorNo": {
                                "type": "string"
                            },
                            "apartment": {
                                "type": "string"
                            },
                            "street": {
                                "type": "string"
                            },
                            "city": {
                                "type": "string"
                            },
                            "state": {
                                "type": "string"
                            },
                            "zip": {
                                "type": "string"
                            },
                            "country": {
                                "type": "string"
                            },
                            "landmark": {
                                "type": "string"
                            }
                        }
                    },
                    "isAdmin": {
                        "type": "boolean"
                    },
                    "profilePhoto": {
                        "type": "string"
                    },
                    "dateCreated": {
                        "type": "string"
                    },
                    "dateModified": {
                        "type": "string"
                    }
                }
            },
            "Users": {
                "type": "array",
                "$ref": "#/components/schemas/User"
            }
        },
        "securitySchemas": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": ["User"],
                "description": "Returns all users",
                "summary": "Get all the users",
                "operationId": "getUsers",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Users not found"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/user:/id": {
            "get": {
                "tags": ["User"],
                "description": "Get a user",
                "summary": "Get a user by id",
                "operationId": "getUser",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Users not found"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "API for Authentication"
        },
        {
            "name": "User",
            "description": "API for users"
        }
    ]
}
